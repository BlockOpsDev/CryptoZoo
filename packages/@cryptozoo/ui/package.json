{
  "name": "@cryptozoo/ui",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist",
    "./styles.css": "./dist/styles.css"
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"yarn tailwind --watch\" \"yarn storybook\"",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --fix",
    "prebuild": "yarn tailwind",
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "clean": "rm -rf dist",
    "codegen": "apollo codegen:generate --target=typescript --suppressDeprecationWarning",
    "tailwind": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "storybook": "start-storybook -p 6006 --quiet",
    "build-storybook": "build-storybook",
    "test": "echo \"No tests specified\""
  },
  "devDependencies": {
    "@apollo/client": "^3.6.9",
    "@babel/core": "^7.18.9",
    "@cryptozoo/graphql": "*",
    "@graphql-tools/mock": "^8.7.1",
    "@graphql-tools/schema": "^8.5.1",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-interactions": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-postcss": "^3.0.0-alpha.1",
    "@storybook/builder-webpack4": "^6.5.9",
    "@storybook/manager-webpack4": "^6.5.9",
    "@storybook/react": "^6.5.9",
    "@storybook/testing-library": "^0.0.13",
    "@types/graphql": "^14.5.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "apollo": "^2.34.0",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.2.2",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "graphql": "^15.8.0",
    "plop": "^3.1.1",
    "react": "^17.0.2",
    "storybook-dark-mode": "^1.1.0",
    "tailwind-config": "*",
    "tailwindcss": "^3.1.5",
    "tsconfig": "*",
    "tsup": "^6.1.3",
    "typescript": "^4.5.2"
  }
}
